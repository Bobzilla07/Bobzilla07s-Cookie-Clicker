<script>
var num = 0;

window.onload = function () {
        var name = prompt("What is your bakerys's name");
        
        var space = document.getElementById("space");
        
          space.innerHTML = name + "'s Bakery";
}

var cookie = document.getElementById("cookie");

function cookieClick() { 
    num += 1;

    var numbers = document.getElementById("numbers");
    
    //upgrade level for printing
    var upgradeLevel = document.getElementById("upgradeLevel");
    
    numbers.innerHTML = num;      
    //automatic Grandma upgrade to 2x
    if(num >= 50 ){
        num += 2;
        upgradeLevel.innerHTML = "Grandma Level";
    }

    //automatic factory upgrade to 10x
    if(num >= 500) {
        num += 10;
        upgradeLevel.innerHTML = "Factory Level";
    }

    //automatic bank upgrade to 30x
    if(num >= 1000) {
        num += 30;
        upgradeLevel.innerHTML = "bank Level";
    }

    //automatic shipment upgrade to 1000x
    if(num >= 10000) {
        num += 1000;
        upgradeLevel.innerHTML = "shipment Level";
    }

//automatic portal upgrade to 1500x
    if(num >= 150000) {
        num += 1500;
        upgradeLevel.innerHTML = "portal Level";
    }


  
//automatic Lemon Cookie upgrade to 1500x
    if(num >= 200000) {
        num += 2000;
        upgradeLevel.innerHTML = "Lemon Cookie Level";
    }
}
</script>
   
